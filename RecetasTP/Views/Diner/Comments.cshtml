@model DAO.Entities.Rating;

@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = $"Reseña {Model.Event.Name}";
}

@if(TempData["Message"] != null)
{
    <div class="alert @TempData["AlertType"]" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Reseña del evento @Model.Event.Name</h3>
    </div>
    <div class="card-body">
        <form asp-controller="Diner" asp-action="SendComment" method="post">
            <input type="hidden" asp-for="EventId"  value="@Model.EventId" />
            <div class="form-group">
                <label asp-for="Rating1">Puntuación</label>
                <input type="number" asp-for="Rating1" step=".01" max="5" maxlength="1" value="5" class="form-control" />
                <span asp-validation-for="Rating1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments">Comentario</label>
                <textarea asp-for="Comments" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <button class="btn btn-primary">Enviar</button>
        </form>
    </div>
</div>

@section Scripts{

 }